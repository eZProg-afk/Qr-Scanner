<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:menu="@menu/clear_menu"
    tools:context=".Fragments.QrHistoryGenerateFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/qr_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/qr_item" />

    <TextView
        android:id="@+id/empty_label_text_view"
        android:layout_width="375dp"
        android:layout_height="171dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="@string/now_empty_gen_tv_label"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>